<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:id="@+id/px4_arm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <Button
            android:id="@+id/button_px4_arm"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_arm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARM"
            android:layout_below="@id/button_px4_arm"
            android:gravity="center"
            android:layout_alignEnd="@id/button_px4_arm"
            android:layout_alignStart="@id/button_px4_arm" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/px4_disarm"
        android:layout_toEndOf="@id/px4_arm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <Button
            android:id="@+id/button_px4_disarm"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_land"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISARM"
            android:layout_below="@id/button_px4_disarm"
            android:gravity="center"
            android:layout_alignEnd="@id/button_px4_disarm"
            android:layout_alignStart="@id/button_px4_disarm" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/px4_altctl"
        android:layout_toEndOf="@id/px4_disarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <Button
            android:id="@+id/button_px4_altctl"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_alt_hold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALTCTL"
            android:layout_below="@id/button_px4_altctl"
            android:gravity="center"
            android:layout_alignEnd="@id/button_px4_altctl"
            android:layout_alignStart="@id/button_px4_altctl" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/px4_manual"
        android:layout_toEndOf="@id/px4_altctl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <Button

            android:id="@+id/button_px4_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_manual"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MANUAL"
            android:layout_below="@id/button_px4_manual"
            android:gravity="center"
            android:layout_alignEnd="@id/button_px4_manual"
            android:layout_alignStart="@id/button_px4_manual" />
        </RelativeLayout>
</RelativeLayout>
